{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Histogram of communicable disease counts for selected year",
    "width": 400,
    "height": 300,
    "title": "Malaysia Communicable Disease Counts by Year",
    "data": {
      "url": "https://raw.githubusercontent.com/idarrshan/FIT3179_Homework-Week-10/refs/heads/main/week10_hw/disease_data.csv"
    },
    "params": [
      {
        "name": "yearFilter",
        "bind": {
          "input": "select",
          "options": [
            "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011",
            "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021"
          ],
          "name": "Year: "
        },
        "value": "2000"
      }
    ],
    "transform": [
      {
        "filter": "datum.Year == yearFilter"
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Diseases",
        "type": "ordinal",
        "title": "Diseases"
      },
      "y": {
        "field": "Count",
        "type": "quantitative",
        "title": "Total Count"
      },
      "color": {
        "field": "Diseases",
        "type": "nominal",
        "legend": null
      },
      "tooltip": [
        {"field": "Diseases", "type": "nominal", "title": "Diseases"},
        {"field": "Count", "type": "quantitative", "title": "Total Count"}
      ]
    }
  }
  